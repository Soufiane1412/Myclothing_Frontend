{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "lib": ["dom", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-native"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }